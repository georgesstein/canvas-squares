{
  "name": "artificial-life",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "browser-sync start --server ./build --files ./build/* --no-ghost-mode --reload-debounce 1000",
    "watch": "npm run build && onchange ./src/* -- npm run build",
    "build": "mkdir -p build && cp ./src/index.html ./build/ && npm run build-ts",
    "build-ts": "mkdir -p build && esbuild ./src/index.ts --bundle --outfile=build/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cuid": "^2.0.1",
    "browser-sync": "^2.27.10",
    "cuid": "^2.1.8",
    "esbuild": "^0.15.7",
    "onchange": "^7.1.0",
    "superstruct": "^0.16.5",
    "typescript": "^4.8.3"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
  }
}
